{
  "extends": "expo/tsconfig.base", 
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "moduleResolution": "node16",
    "module": "Node16",
    "paths": {
      "*": [
        "*"
      ]
    },
    "jsx": "react-native",
    "lib": [
      "dom",
      "esnext"
    ],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "esnext"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
